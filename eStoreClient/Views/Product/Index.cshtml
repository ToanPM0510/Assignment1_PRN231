@model List<BusinessObject.Models.Product>

<h1>Products</h1>
<a asp-controller="Product" asp-action="Create" class="btn btn-primary">Create New Product</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.Category</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId">Edit</a> |
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>