@model List<BusinessObject.Models.Order>

<h1>Orders</h1>
<a asp-controller="Order" asp-action="Create" class="btn btn-primary">Create New Order</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Order Date</th>
            <th>Required Date</th>
            <th>Shipped Date</th>
            <th>Freight</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                
                <td>@order.ShippedDate?.ToString("yyyy-MM-dd")</td>
                <td>@order.Freight</td>
                <td>
                    <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.OrderId">Edit</a> |
                    <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>