@model eStoreClient.Models.OrderDetail

<h1>Edit Order Detail</h1>
<form method="post">
    <input type="hidden" name="OrderId" value="@Model.OrderId" />
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <label>Quantity:</label>
    <input type="number" name="Quantity" value="@Model.Quantity" required />
    <label>Unit Price:</label>
    <input type="number" step="0.01" name="UnitPrice" value="@Model.UnitPrice" required />
    <label>Discount:</label>
    <input type="number" step="0.01" name="Discount" value="@Model.Discount" required />
    <button type="submit">Save</button>
</form>