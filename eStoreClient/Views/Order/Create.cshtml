@model eStoreClient.Models.Order

<h1>Create Order</h1>
<form method="post">
    <label>Member ID:</label>
    <input type="number" name="MemberId" required />

    <label>Order Date:</label>
    <input type="date" name="OrderDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />

    <label>Shipped Date:</label>
    <input type="date" name="ShippedDate" />

    <label>Freight:</label>
    <input type="number" step="0.01" name="Freight" value="0.00" required />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="/Order" class="btn btn-secondary">Back to List</a>
    </div>
</form>